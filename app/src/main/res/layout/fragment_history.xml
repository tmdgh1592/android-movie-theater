<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="woowacourse.movie.presentation.views.main.fragments.history.recyclerview.HistoryListAdapter" />

        <variable
            name="presenter"
            type="woowacourse.movie.presentation.views.main.fragments.history.contract.HistoryContract.Presenter" />

        <variable
            name="rvAdapter"
            type="HistoryListAdapter" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.views.main.fragments.history.HistoryFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:adapter="@{rvAdapter}"
            app:hasDivider="@{true}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:onAdapted="@{presenter::loadHistories}"
            app:onListItemClick="@{presenter::handleItem}"
            tools:itemCount="5"
            tools:listitem="@layout/item_history" />

    </FrameLayout>
</layout>
