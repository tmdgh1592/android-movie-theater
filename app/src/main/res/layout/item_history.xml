<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="history"
            type="woowacourse.movie.presentation.model.Reservation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="12dp">

        <TextView
            android:id="@+id/movie_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{history.formattedDate}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2024. 3. 2" />

        <View
            android:id="@+id/date_time_divider_view"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:background="#D0D0D0"
            app:layout_constraintBottom_toBottomOf="@id/movie_date_text_view"
            app:layout_constraintStart_toEndOf="@id/movie_date_text_view"
            app:layout_constraintTop_toTopOf="@id/movie_date_text_view" />

        <TextView
            android:id="@+id/movie_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@{history.formattedTime}"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/date_time_divider_view"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="17:00" />

        <TextView
            android:id="@+id/movie_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{history.movieTitle}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/movie_date_text_view"
            tools:text="해리 포터와 마법사의 돌" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
